        </div>
        
        <%= form_with url: scan_path, local: true, multipart: true, class: "d-none" do |f| %> 
            <%= f.hidden_field :image_data, data: { photo_capture_target: "photoInput" } %> 
            <%= f.submit "Analyser la photo", data: { photo_capture_target: "formSubmit" } %>
        <% end %>
    </div>
</div>

